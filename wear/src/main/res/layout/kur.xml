<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/darker_gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0"

        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnTfkbDovizKur"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/custom_button_image"
            android:layout_weight="1.0"
            android:text="Türkiye Finans Döviz"

            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_margin="7dp" />

        <Button
            android:id="@+id/btnSerbestPiyasa"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/custom_button_image"
            android:layout_weight="1.0"
            android:text="Serbest Piyasa Kurları"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_margin="7dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnTcmbKur"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/custom_button_image"
            android:layout_weight="1.0"
            android:text="TCMB kurları"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_margin="7dp" />

        <Button
            android:id="@+id/btnUluslararasıParite"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/custom_button_image"
            android:layout_weight="1.0"
            android:text="Uluslararası Parite"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_margin="7dp" />

    </LinearLayout>
</LinearLayout>